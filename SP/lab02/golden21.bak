(define mphi (* (- 3(sqrt 5))(/ 2.0)))
(define (try a b xa ya xb yb)
 (cond((close-enough? a b)
      (* (+ a b)0.5))
      (else(display "+")
             (set! total-iterations (+ total-iterations 1))
             (cond((< ya yb) (set! b xb))(else 1))
             (cond((< ya yb) (set! xb xa))(else 2))
             (cond((< ya yb) (set! yb ya))(else 3))
             (cond((= ya yb) (set! xa (+ a (* mphi(- b a)))))(else 4))
             (cond((= ya yb) (try a b xa (fun xa) xb yb))
                  (else    (set! a xa)
                         (set! xa xb)
                         (set! ya yb)
                         (set! xb (- b (* mphi(- b a))))
                         (try a b xa ya xb (fun xb))
                   )
             );cond...
      );let...
 );if...
)
